import java.io.File;
import java.io.IOException;


public class Converter {

	Raster target, canvas;
	int width, height;
	String outputFilename;
	
	public Converter(String input, String output) throws IOException{
		target = new Raster(new File(input));
		canvas = new Raster(target.getWidth(), target.getHeight());
		outputFilename = output;
	}
	
	public void save() throws IOException {
		canvas.save(new File(outputFilename));
	}
	
	public static void main(String[] args) throws IOException {
		if(args.length < 2) {
			System.out.println("Usage: java Converter INPUT_IMG OUTPUT_IMG FONT_DIR");
		}else {
			Converter c = new Converter(args[0], args[1]);
			Font f = new Font(new File(args[2]));
			c.save();
		}
	}

}
